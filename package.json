{
  "name": "@system76/renovate-config",
  "version": "0.0.0-development",
  "description": "System76 configuration for Renovate Bot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/system76/renovate-config.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@system76/standard": "^1.0.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "renovate": "^14.57.1",
    "semantic-release": "^15.10.8"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "standard",
    "test": "renovate-config-validator",
    "release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [],
  "renovate-config": {
    "default": {
      "description": "System76 configuration for Renovate Bot",
      "bumpVersion": "major,minor",
      "includeForks": true,
      "rangeStrategy": "bump",
      "extends": [
        "config:base",
        "group:allNonMajor",
        ":semanticCommitTypeAll(chore)",
        ":labels(depedendencies)"
      ],
      "php": {
        "enabled": false
      },
      "npm": {
        "commitMessageTopic": "{{prettyDepType}} {{depName}}"
      }
    }
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "renovate",
    "system76"
  ],
  "author": "System76 <hosting@system76.com> (https://system76.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/system76/renovate-config/issues"
  },
  "homepage": "https://github.com/system76/renovate-config#readme"
}
